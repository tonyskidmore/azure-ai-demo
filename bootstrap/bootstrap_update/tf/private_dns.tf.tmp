resource "azurerm_private_dns_zone" "blob" {
  name                = "privatelink.blob.core.windows.net"
  resource_group_name = azurerm_resource_group.azure-ai-demo.name

  tags = var.tags
}

resource "azurerm_private_dns_a_record" "tf" {
  name                = azurerm_storage_account.azure-ai-demo.name
  zone_name           = azurerm_private_dns_zone.blob.name
  resource_group_name = azurerm_resource_group.azure-ai-demo.name
  ttl                 = 3600
  records             = [azurerm_private_endpoint.azure-ai-demo.private_service_connection.0.private_ip_address]

  tags = var.tags
}

resource "azurerm_private_dns_zone_virtual_network_link" "azure-ai-demo" {
  name                  = "blob_dns_vnet_link"
  resource_group_name   = azurerm_resource_group.azure-ai-demo.name
  private_dns_zone_name = azurerm_private_dns_zone.blob.name
  virtual_network_id    = azurerm_virtual_network.azure-ai-demo.id
  registration_enabled  = false

  tags = var.tags
}
