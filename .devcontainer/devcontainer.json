{
	"image": "ghcr.io/tonyskidmore/devcontainers-terraform:latest",
	"features": {
			"ghcr.io/devcontainers/features/docker-in-docker:1": {
				"version": "latest"
			},
			"ghcr.io/devcontainers/features/docker-from-docker:1": {
				"version": "latest"
			},
			"ghcr.io/devcontainers/features/python:1": {}
	},
	"remoteUser": "vscode",
	// .pre-commit-<uuid> creates a unique cache directory in $HOME/.pre-commit for each project
	// specify a new uuid per project e.g. using uuidgen
	"mounts": [
		"source=${localEnv:HOME}/.pre-commit-c219e095-9fa3-448c-9783-d8f7a3025abb,target=/home/vscode/.pre-commit,type=bind,consistency=cached",
		"source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
	],
	"remoteEnv": {
		"PRE_COMMIT_HOME": "/home/vscode/.pre-commit"
	},
	"postCreateCommand": "bash ./.devcontainer/init.sh",
	"customizations": {
		// Configure properties specific to VS Code.
		"vscode": {
			"extensions": [
				"hashicorp.terraform",
				"ms-azuretools.vscode-azureterraform",
				"shardulm94.trailing-spaces",
				"streetsidesoftware.code-spell-checker",
				"wwm.better-align",
				"ms-python.python",
        "ms-python.vscode-pylance",
				"ms-python.flake8",
        "ms-python.pylint",
				"ms-python.black-formatter",
				"ms-python.isort",
				"GitHub.copilot"
			]
		}
	}
}
